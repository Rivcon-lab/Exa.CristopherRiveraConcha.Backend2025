            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CamisetaUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Camiseta actualizada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CamisetaCompleta"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "delete": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Elimina una camiseta",
        "description": "Elimina una camiseta del sistema",
        "parameters": [
          {
            "$ref": "#/components/parameters/IdPath"
          }
        ],
        "responses": {
          "200": {
            "description": "Camiseta eliminada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Camiseta eliminada correctamente"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/camisetas/{id}/precio/{cliente_id}": {
      "get": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Calcula precio final para cliente",
        "description": "**ENDPOINT CRÍTICO**: Calcula el precio final de una camiseta para un cliente específico.\n\nAplica la lógica de negocio:\n1. Si cliente Preferencial + precio_oferta existe → usar precio_oferta\n2. Sino → usar precio normal\n3. Aplicar descuento del cliente\n",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID de la camiseta",
            "example": 1
          },
          {
            "name": "cliente_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID del cliente",
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Precio final calculado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "precio_final": {
                      "type": "number",
                      "format": "float",
                      "description": "Precio final calculado según lógica de negocio",
                      "example": 32300.0
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/camisetas/{id}/tallas": {
      "get": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Obtiene tallas de una camiseta",
        "description": "Lista todas las tallas asignadas a una camiseta con su stock",
        "parameters": [
          {
            "$ref": "#/components/parameters/IdPath"
          }
        ],
        "responses": {
          "200": {
            "description": "Tallas obtenidas exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TallaStock"
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "post": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Asigna talla a camiseta",
        "description": "Asigna una talla a una camiseta con stock inicial",
        "parameters": [
          {
            "$ref": "#/components/parameters/IdPath"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "talla_id"
                ],
                "properties": {
                  "talla_id": {
                    "type": "integer",
                    "description": "ID de la talla a asignar",
                    "example": 3
                  },
                  "stock": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Stock inicial (default 0)",
                    "example": 15
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Talla asignada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TallaStock"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/camisetas/{camiseta_id}/tallas/{talla_id}": {
      "put": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Actualiza stock de talla",
        "description": "Actualiza el stock de una talla específica en una camiseta",
        "parameters": [
          {
            "name": "camiseta_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID de la camiseta"
          },
          {
            "name": "talla_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID de la talla"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "stock"
                ],
                "properties": {
