          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "put": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Actualiza una camiseta",
        "description": "Actualiza los datos de una camiseta existente",
        "parameters": [
          {
            "$ref": "#/components/parameters/IdPath"
          }
        ],
        "requestBody": {
          "required": true,
