{
  "openapi": "3.0.3",
  "info": {
    "title": "TodoCamisetas API",
    "description": "API RESTful completa para la gestión de camisetas deportivas.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost/todocamisetas-api",
      "description": "Servidor de desarrollo local (XAMPP)"
    }
  ],
  "tags": [
    {
      "name": "Camisetas",
      "description": "Operaciones relacionadas con camisetas deportivas"
    },
    {
      "name": "Clientes",
      "description": "Operaciones relacionadas con clientes"
    },
    {
      "name": "Tallas",
      "description": "Operaciones relacionadas con tallas"
    }
  ],
  "paths": {
    "/api/camisetas": {
      "get": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Lista todas las camisetas",
        "description": "Obtiene todas las camisetas con sus tallas asociadas",
        "responses": {
          "200": {
            "description": "Lista de camisetas obtenida exitosamente",
            "headers": {
              "X-RateLimit-Limit": {
                "schema": {
                  "type": "integer",
                  "example": 100
                }
              },
              "X-RateLimit-Remaining": {
                "schema": {
                  "type": "integer",
                  "example": 99
                }
              },
              "X-RateLimit-Reset": {
                "schema": {
                  "type": "integer",
                  "example": 60
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CamisetaCompleta"
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "post": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Crea una nueva camiseta",
        "description": "Crea una nueva camiseta con validaciones completas",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CamisetaInput"
              },
              "example": {
                "titulo": "Camiseta Local 2025 – Selección Chilena",
                "club": "Selección Chilena",
                "pais": "Chile",
                "tipo": "Local",
                "color": "Rojo y Azul",
                "precio": 45000.0,
                "precio_oferta": 38000.0,
                "detalles": "Edición aniversario 2025",
                "codigo_producto": "SCL2025L"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Camiseta creada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CamisetaCompleta"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/camisetas/{id}": {
      "get": {
        "tags": [
          "Camisetas"
