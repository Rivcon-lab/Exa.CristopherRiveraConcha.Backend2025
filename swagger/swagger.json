          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "delete": {
        "tags": [
          "Camisetas"
        ],
        "summary": "Remueve talla de camiseta",
        "description": "Remueve la asignación de una talla a una camiseta",
        "parameters": [
          {
            "name": "camiseta_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID de la camiseta"
